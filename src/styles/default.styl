.model-warper 
	background: rgba(225, 225, 225, 0.7) none repeat scroll 0 0;
	bottom: 0;
	height: 100%;
	left: 0;
	position: fixed;
	right: 0;
	top: 0;
	width: 100%;
	.pc-modal 
		left: 50%;
		margin: auto;
		max-width: 300px;
		position: fixed;
		top: 50%;
		transform: translateY(-50%) translateX(-50%);
		width: 90%;
		border: 1px solid $border-color;
		
		.pc-prompt-error-message 
			color red
			margin-bottom 15px
				
		.model-inner
			position:relative;
			.pc-title
				background: prim_color() none repeat scroll 0 0;
				border-bottom: 1px solid $border-color;
				color: prim_font_color();
				padding: 10px;
				box-sizing:border-box;
				
			.pc-model-close
				.close
					color:inherit;
					text-decoration:none;
					
				position: absolute;
				right: 10px;
				top: 8px;
				cursor:pointer;
				
			.pc-model-body
				padding: 10px;
				background:#fff;
				box-sizing:border-box;
				
.input-field-container
	display: table;
	margin-bottom: 10px;
	width: 100%;
	box-sizing: border-box;
	& label 
		display: block;
		margin-bottom: 5px;
		width: 100%;
		box-sizing: border-box;
	
	input, textarea, select 
		border: thin solid $border-color;
		border-radius: .25em;
		padding: .5em;
		display: inline-block;
		height: auto;
		vertical-align: middle;
		height : 32px;
		box-sizing: border-box;
		width: 100%;
		&:focus 
			outline: none;
			border: thin solid prim_color();
		
	
	& textarea 
		max-width: 100%;
		min-height: 50px;
		width: 100%;
	
	& select 
		font-size: 14px;
	
	& input[type="submit"], input[type="button"], button
		border-color:#19b394 #19b394 #16a085;
	

