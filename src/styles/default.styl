prim_color($opacity = 1) 
    rgba(0, 0, 0, $opacity)
    
prim_font_color($opacity = 1) 
    rgba(255, 255, 255, $opacity)

sec_color($opacity = 1) 
    rgba(25, 179, 148, $opacity)
sec_font_color($opacity = 1) 
    rgba(0, 0, 0, $opacity)
    
calc()
    if current-property
        for prefix in vendors
            add-property(current-property[0], s('-%s-calc(unquote(%s))', prefix, arguments))
        s('calc(unquote(%s))', arguments)
    else
        s('', arguments)

$border-color = #ccc

$image = "../images"
@import "responsive";

.pull-right
    float: right


.fb-save-wrapper 
    position: absolute
    right: 20px
    bottom: 10px
    top:auto
    box-sizing: border-box
    display none
    +respond-below(767px)
        margin 10px auto
        display none
        position unset

.fb-button
    &.fb-button-default
        border-color #cccccc
        background #cccccc
    &.fb-button-small
        padding 0.363rem 0.544rem
    
.fb-button-group
    .fb-button
        margin-right 5px

.model-warper 
    background: rgba(225, 225, 225, 0.7) none repeat scroll 0 0;
    bottom: 0;
    height: 100%;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
    width: 100%;
    .pc-modal 
        left: 50%;
        margin: auto;
        max-width: 300px;
        position: fixed;
        top: 50%;
        transform: translateY(-50%) translateX(-50%);
        width: 90%;
        border: 1px solid $border-color;
        
        .pc-prompt-error-message 
            color red
            margin-bottom 15px
                
        .model-inner
            position:relative;
            .pc-title
                background: prim_color() none repeat scroll 0 0;
                border-bottom: 1px solid $border-color;
                color: prim_font_color();
                padding: 10px;
                box-sizing:border-box;
                
            .pc-model-close
                .close
                    color:inherit;
                    text-decoration:none;
                    
                position: absolute;
                right: 10px;
                top: 8px;
                cursor:pointer;
                
            .pc-model-body
                padding: 10px;
                background:#fff;
                box-sizing:border-box;
                
.input-field-container
    display: table;
    margin-bottom: 10px;
    width: 100%;
    box-sizing: border-box;
    & label 
        display: block;
        margin-bottom: 5px;
        width: 100%;
        box-sizing: border-box;
    
    input, textarea, select 
        border: thin solid $border-color;
        border-radius: .25em;
        padding: .5em;
        display: inline-block;
        height: auto;
        vertical-align: middle;
        height : 32px;
        box-sizing: border-box;
        width: 100%;
        &:focus 
            outline: none;
            border: thin solid prim_color();
        
    
    & textarea 
        max-width: 100%;
        min-height: 50px;
        width: 100%;
    
    & select 
        font-size: 14px;
    
    & input[type="submit"], input[type="button"], button
        border-color:#19b394 #19b394 #16a085;
    

.customizer-main
    box-shadow: 0 2px 5px 0 prim_color(0.16), 0 2px 10px 0 prim_color(0.12);
    position:relative;
    .pc-loader-container 
        background: rgba(255, 255, 255, 0.8) none repeat scroll 0 0;
        height: 100%;
        left: 0;
        position: absolute;
        width: 100%;
        top: 0;
        right:0;
        bottom:0;
        display:none;
        .pc-loading-inner
            text-align:center;
            transform:translate(-50%, -50%);
            top: 50%;
            left: 50%;
            position: absolute;
            font-size:25px;
            .pc-loading-icon
                margin-bottom:10px;
                font-size:40px;
    &.fullscreen
        bottom: 0;
        height: auto;
        left: 0;
        margin: 0.1%;
        max-width: none;
        position: fixed;
        right: 0;
        top: 0;
        width: auto;
        z-index: 9999;
        background:#fff;
    .pc-title
        background: prim_color() none repeat scroll 0 0;
        border-bottom: 1px solid $border-color;
        color: prim_font_color();
        padding: 10px;
    
    .pc-icon-inline
        display: inline-table;
        margin-left: 5px;
        margin-right: 5px;
        padding-left: 2px;
        padding-right: 2px;
        vertical-align: middle;
        cursor:pointer;
        &.fullscreen
            +respond-below(767px)
                display none
    
    .pc-icon-inline-seprater 
        display: inline-table;
        margin-left: 5px;
        margin-right: 5px;
    
    .fb-left
        float left
        width 24%
        padding-top 0px
        box-sizing border-box
        
        +respond-below(769px)
            border-bottom: 1px solid $border-color;
            float: none;
            margin-bottom: 5px;
            padding-bottom: 5px;
            width: 100%;
            height: 300px;
            overflow: hidden;
            
        .fb-tab-content
            +respond-below(769px)
                overflow auto
                height 235px
                
                
    
                    
    .fb-tabs 
        background: prim_color();
        border: none;
        padding: 0;
        list-style: none;
        margin: 0 0 20px 0;
        display: table;
        width: 100%;
        & li
            background: prim_color();
            color: prim_font_color();
            border: none;
            float: left;
            border-right: 1px solid prim_font_color();
            & a
                margin: 0;
                display: block;
                padding: 10px;
                cursor: pointer;
            
            &.active
                color: prim_color();
                background: prim_font_color(); 
                & a
                    border: none;
                
            
        
    
    .fb-tab-content
        .assets 
            background:none;
            border: 1px solid $border-color;
            float: left;
            height: 70px;
            margin: 1%;
            padding: 5px;
            text-align: center;
            width: 31.33%;
            cursor: pointer;
            & img 
                height: auto;
                margin: 0 auto;
                max-height: 100%;
                max-width: 100%;
                width: auto;

    .fb-right 
        /*border-left: 1px solid $border-color;
        border-right: 1px solid $border-color;*/
        box-sizing: border-box;
        float: left;
        margin: 0;
        min-height: 100%;
        overflow: hidden;
        /*padding: 0 0 0 5px;*/
        width: 100%;
        
        +respond-below(769px)
            width 100%
            padding: 0 ;
            border:none;
            
        .pc-canvas
            background: url($image'/grid.png');
            border:1px solid #d2d2d2;
        
        .pc-style-icon
            box-sizing: border-box;
            cursor: pointer;
            float: left;
            font-size: 25px;
            line-height: 25px;
            margin: 0 2px;
            padding: 2px 5px;
            text-align: center;
            min-width: 25px;
            width: auto;
            transition: all 1.5s ease 0s;
            color: rgba(0, 0, 0, 0.5);

            &:hover
                color : sec_color(0.9);
            
        

    
    .fb-upload-image-field-wrapper
        .pd-upload-zone
            /*border: 2px dashed #ecf0f1;*/
            border-radius: 5px;
            color: #7f8c8d;
            cursor: pointer;
            height: auto;
            /*padding-bottom: 30px;
            padding-top: 30px;*/
            position: relative;
            width: 100%;
            max-width : 500px;
            margin: 20px auto;
            
            .upload-text
                max-width: 240px;
                margin: 0 auto;
                text-align: left;
                .fa
                    float: left;
                    width: auto;
                    line-height: 2em;
                    margin-right: 10px;

            .picture_iamge
                font-size: 150px;
                color: rgba(0,0,0,0.2);
            

            .inner-upload-zone
                color: #000;
                padding: 10px;
                background: rgba(0,0,0,0.2);
                border-radius: 5px;
                margin: 0 10px;
            
            .image-preview
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                width: auto;
                height: auto;
                background-size: cover;
                background-repeat: no-repeat;
                background-position: center;
                opacity: 0.6;
                z-index: -1;
            

            .pc-upload-image
                bottom: 0;
                height: 100%;
                left: 0;
                opacity: 0;
                position: absolute;
                right: 0;
                top: 0;
                width: 100%;
                z-index: 9999;
            & span 
                display: table;
                margin-bottom: 5px;
                text-align: center;
                width: 100%;
                
        #upload-image{
            opacity:0;
            position: absolute;
            top: 0;
        }
