prim_color($opacity = 1) 
	rgba(0, 0, 0, $opacity)
	
prim_font_color($opacity = 1) 
	rgba(255, 255, 255, $opacity)

sec_color($opacity = 1) 
	rgba(25, 179, 148, $opacity)
sec_font_color($opacity = 1) 
	rgba(0, 0, 0, $opacity)
	
calc()
	if current-property
		for prefix in vendors
			add-property(current-property[0], s('-%s-calc(unquote(%s))', prefix, arguments))
		s('calc(unquote(%s))', arguments)
	else
		s('', arguments)

$border-color = #ccc

$image = "../images"
@import "responsive";

.pull-right
	float: right


.fb-save-wrapper 
	position: absolute
	right: 20px
	bottom: 10px
	top:auto
	box-sizing: border-box
